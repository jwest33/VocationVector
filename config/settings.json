    "logging": {
      "level": "INFO",
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "file_path": "logs/graph.log",
      "console_output": true,
      "log_to_file": false,
      "max_file_size_mb": 10,
      "backup_count": 5
