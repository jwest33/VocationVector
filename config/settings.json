{
  "default": {
    "environment": "development",
    "database": {
      "db_path": "data/lancedb",
      "reset_if_exists": false,
      "auto_recreate_on_schema_error": true,
      "embedding_batch_size": 64,
      "max_search_results": 100,
      "cleanup_days": 30,
      "enable_versioning": true
    },
    "crawler": {
      "headless": true,
      "browser_timeout": 30000,
      "page_load_timeout": 60000,
      "crawl_delay_seconds": 1.5,
      "max_retries": 3,
      "retry_delay_seconds": 2.0,
      "default_max_jobs": 20,
      "max_jobs_per_session": 50,
      "job_card_selector": "div.EimVGf",
      "show_more_selector": "button[aria-label*='Show full description']"
    },
    "llm": {
      "model_path": "C:\\models\\Qwen3-4B-Instruct-2507\\Qwen3-4B-Instruct-2507-F16.gguf",
      "llm_name": "qwen3-4b-instruct-2507-f16",
      "host": "0.0.0.0",
      "port": 8000,
      "base_url": "http://localhost:8000/v1",
      "auto_start_server": true,
      "stop_server_on_complete": false,
      "server_startup_timeout": 60,
      "health_check_interval": 5,
      "temperature": 0.1,
      "max_tokens": 500,
      "timeout": 30,
      "context_size": 10000,
      "n_gpu_layers": 35,
      "threads": 12
    },
    "embedding": {
      "llm_name": "TechWolf/JobBERT-v2",
